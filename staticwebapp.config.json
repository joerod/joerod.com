{
  "navigationFallback": {
    "rewrite": "/index.html",
    "exclude": [
      "/.well-known/*",
      "/api/*",
      "/.auth/*",
      "/assets/*",
      "/*.css",
      "/*.js",
      "/*.png",
      "/*.jpg",
      "/*.jpeg",
      "/*.svg",
      "/*.ico",
      "/*.txt",
      "/*.json"
    ]
  },
  "routes": [
    {
      "route": "/admin",
      "rewrite": "/admin.html",
      "allowedRoles": [
        "admin"
      ]
    },
    {
      "route": "/admin.html",
      "allowedRoles": [
        "admin"
      ]
    },
    {
      "route": "/api/summary",
      "allowedRoles": [
        "admin"
      ]
    },
    {
      "route": "/api/locations",
      "allowedRoles": [
        "admin"
      ]
    },
    {
      "route": "/api/config",
      "allowedRoles": [
        "admin"
      ]
    }
  ],
  "responseOverrides": {
    "401": {
      "redirect": "/.auth/login/github",
      "statusCode": 302
    },
    "403": {
      "rewrite": "/403.html",
      "statusCode": 403
    }
  },
  "globalHeaders": {
    "Strict-Transport-Security": "max-age=63072000; includeSubDomains; preload",
    "Content-Security-Policy": "default-src 'self'; base-uri 'self'; object-src 'none'; frame-ancestors 'none'; form-action 'self'; img-src 'self' data: https://cdn.jsdelivr.net; font-src 'self' https://fonts.gstatic.com; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; script-src 'self' 'unsafe-inline' https://ajax.googleapis.com https://cdn.jsdelivr.net; connect-src 'self' https://api.openweathermap.org https://api.coingecko.com https://site.api.espn.com; frame-src https://www.youtube-nocookie.com",
    "X-Content-Type-Options": "nosniff",
    "X-Frame-Options": "DENY",
    "Referrer-Policy": "strict-origin-when-cross-origin",
    "Permissions-Policy": "geolocation=(), microphone=(), camera=(), payment=(), usb=()"
  }
}
